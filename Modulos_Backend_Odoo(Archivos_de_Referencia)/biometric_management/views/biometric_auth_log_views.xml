<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================ -->
    <!-- VISTA FORMULARIO - Log de Autenticación -->
    <!-- ============================================ -->
    
    <record id="view_biometric_auth_log_form" model="ir.ui.view">
        <field name="name">biometric.auth.log.form</field>
        <field name="model">biometric.auth.log</field>
        <field name="arch" type="xml">
            <form string="Log de Autenticación" create="false" edit="false" delete="false">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" 
                                icon="fa-check-circle" 
                                type="object"
                                invisible="not success">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text text-success">Exitoso</span>
                            </div>
                        </button>
                        
                        <button class="oe_stat_button" 
                                icon="fa-times-circle" 
                                type="object"
                                invisible="success">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text text-danger">Fallido</span>
                            </div>
                        </button>
                    </div>
                    
                    <group>
                        <group string="Información General">
                            <field name="user_id" readonly="1"/>
                            <field name="device_id" readonly="1"/>
                            <field name="auth_date" readonly="1"/>
                            <field name="success" widget="boolean" readonly="1"/>
                            <field name="auth_type" widget="badge" readonly="1"/>
                        </group>
                        
                        <group string="Dispositivo">
                            <field name="device_name" readonly="1"/>
                            <field name="device_platform" widget="badge" readonly="1"/>
                        </group>
                    </group>
                    
                    <group invisible="success">
                        <group string="Información de Error">
                            <field name="error_code" readonly="1"/>
                            <field name="error_message" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Información Técnica">
                            <field name="session_id" readonly="1"/>
                            <field name="ip_address" readonly="1"/>
                            <field name="duration_ms" readonly="1" widget="integer"/>
                        </group>
                        
                        <group string="Detalles Adicionales">
                            <field name="user_agent" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Notas" invisible="not notes">
                        <field name="notes" readonly="1" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- VISTA ÁRBOL - Logs de Autenticación -->
    <!-- ============================================ -->
    
    <record id="view_biometric_auth_log_tree" model="ir.ui.view">
        <field name="name">biometric.auth.log.tree</field>
        <field name="model">biometric.auth.log</field>
        <field name="arch" type="xml">
            <list string="Historial de Autenticaciones" 
                  create="false" 
                  edit="false"
                  decoration-success="success == True"
                  decoration-danger="success == False">
                
                <field name="auth_date"/>
                <field name="user_id"/>
                <field name="device_name"/>
                <field name="device_platform" widget="badge"/>
                <field name="auth_type" widget="badge"/>
                <field name="success" widget="boolean"/>
                <field name="error_code" optional="hide"/>
                <field name="duration_ms" string="Duración (ms)" optional="hide"/>
                <field name="ip_address" optional="hide"/>
            </list>
        </field>
    </record>


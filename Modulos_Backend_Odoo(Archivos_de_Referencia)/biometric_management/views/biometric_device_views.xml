    <!-- ============================================ -->
    <!-- ACCIÓN - Dispositivos Biométricos -->
    <!-- ============================================ -->
    
    <record id="action_biometric_device" model="ir.actions.act_window">
        <field name="name">Dispositivos Biométricos</field>
        <field name="res_model">biometric.device</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_my_devices': 1, 'search_default_active_devices': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay dispositivos biométricos registrados
            </p>
            <p>
                Los dispositivos se registran automáticamente desde la aplicación móvil
                cuando un usuario habilita la autenticación biométrica.
            </p>
        </field>
    </record>


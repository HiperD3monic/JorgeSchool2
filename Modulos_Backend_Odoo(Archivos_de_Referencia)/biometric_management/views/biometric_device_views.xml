<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================ -->
    <!-- VISTA FORMULARIO - Dispositivo Biométrico -->
    <!-- ============================================ -->
    
    <record id="view_biometric_device_form" model="ir.ui.view">
        <field name="name">biometric.device.form</field>
        <field name="model">biometric.device</field>
        <field name="arch" type="xml">
            <form string="Dispositivo Biométrico">
                <header>
                    <button name="action_activate" 
                            string="Activar" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state == 'active'"/>
                    
                    <button name="action_revoke" 
                            string="Revocar Acceso" 
                            type="object" 
                            class="oe_highlight"
                            confirm="¿Está seguro de revocar el acceso a este dispositivo?"
                            invisible="state == 'revoked'"/>
                    
                    <field name="state" widget="statusbar" 
                           statusbar_visible="active,inactive,revoked"/>
                </header>
                
                <sheet>
                    <!-- Badges de estado -->
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                        
                        <button class="oe_stat_button" 
                                icon="fa-check-circle" 
                                type="object"
                                invisible="not is_recently_used">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text text-success">Activo</span>
                                <span class="o_stat_text">Últimas 24h</span>
                            </div>
                        </button>
                        
                        <button class="oe_stat_button" 
                                icon="fa-exclamation-triangle" 
                                type="object"
                                invisible="not is_stale">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text text-warning">Inactivo</span>
                                <span class="o_stat_text">&gt;30 días</span>
                            </div>
                        </button>
                        
                        <button name="%(action_biometric_auth_log_by_device)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-history">
                            <field name="auth_count" widget="statinfo" 
                                   string="Autenticaciones"/>
                        </button>
                    </div>
                    
                    <!-- Título con icono según plataforma -->
                    <widget name="web_ribbon" title="Revocado" 
                            bg_color="bg-danger"
                            invisible="state != 'revoked'"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="device_name" placeholder="Nombre del dispositivo"/>
                        </h1>
                        <h3>
                            <field name="user_id" readonly="1"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group string="Información del Dispositivo">
                            <field name="device_id" readonly="1"/>
                            <field name="platform" widget="badge"/>
                            <field name="os_version"/>
                            <field name="brand"/>
                            <field name="model_name"/>
                            <field name="is_physical_device" widget="boolean_toggle"/>
                        </group>
                        
                        <group string="Información Biométrica">
                            <field name="biometric_type" widget="badge"/>
                            <field name="biometric_type_display"/>
                            <field name="is_enabled" widget="boolean_toggle"/>
                            <field name="employee_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Fechas">
                            <field name="enrolled_at" readonly="1"/>
                            <field name="last_used_at" readonly="1"/>
                            <field name="last_auth_date" readonly="1"/>
                            <field name="days_since_last_use" readonly="1"
                                   invisible="days_since_last_use &lt; 0"/>
                        </group>
                        
                        <group string="Revocación" 
                               invisible="state != 'revoked'">
                            <field name="revoked_at" readonly="1"/>
                            <field name="revoked_by" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Información Técnica">
                            <group>
                                <field name="device_info_json" 
                                       widget="ace" 
                                       options="{'mode': 'json'}"
                                       placeholder="{}"/>
                            </group>
                        </page>
                        
                        <page string="Notas">
                            <field name="notes" placeholder="Notas adicionales..."/>
                        </page>
                        
                        <page string="Historial de Autenticaciones">
                            <field name="auth_count" invisible="1"/>
                            <field name="id" invisible="1"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- VISTA ÁRBOL - Dispositivos Biométricos -->
    <!-- ============================================ -->
    
    <record id="view_biometric_device_tree" model="ir.ui.view">
        <field name="name">biometric.device.tree</field>
        <field name="model">biometric.device</field>
        <field name="arch" type="xml">
            <list string="Dispositivos Biométricos" 
                  decoration-success="is_recently_used == True"
                  decoration-warning="is_stale == True"
                  decoration-danger="state == 'revoked'"
                  decoration-muted="state == 'inactive'">
                
                <field name="device_name"/>
                <field name="user_id"/>
                <field name="platform" widget="badge"/>
                <field name="biometric_type_display"/>
                <field name="enrolled_at"/>
                <field name="last_used_at"/>
                <field name="auth_count"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'active'"
                       decoration-warning="state == 'inactive'"
                       decoration-danger="state == 'revoked'"/>
                <field name="is_recently_used" column_invisible="1"/>
                <field name="is_stale" column_invisible="1"/>
                <field name="is_enabled" widget="boolean_toggle"/>
            </list>
        </field>
    </record>


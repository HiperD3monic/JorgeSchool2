<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cron job para importar personal desde JSON -->
    <record id="ir_cron_import_personal_json" model="ir.cron">
        <field name="name">Importar Personal desde JSON</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="state">code</field>
        <field name="code">model._cron_import_personal_from_json()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">False</field>
    </record>
</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="school.TopStudentsGraphField">
        <div class="o_top_students_graph" t-att-class="props.className">
            <div class="text-center mb-3">
                <h5 class="mb-0 fw-bold">Top 5 Estudiantes con Mejor Promedio</h5>
            </div>
            <div class="o_graph_canvas_wrapper" style="position: relative; height: 300px;">
                <canvas t-if="data.top_students and data.top_students.length > 0" t-ref="canvas"/>
                <div t-else="" class="alert alert-info text-center">
                    <i class="fa fa-info-circle me-2"/>
                    No hay datos de estudiantes para mostrar
                </div>
            </div>
        </div>
    </t>

</templates>


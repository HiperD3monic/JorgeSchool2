<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="school.LevelDashboard">
        <div class="o_level_dashboard">
            <t t-if="hasData">
                <!-- Summary Stats -->
                <div class="row mb-3">
                    <div class="col-md-4 text-center">
                        <div class="card border-primary h-100">
                            <div class="card-body py-2">
                                <h5 class="mb-0 text-primary"><t t-esc="totalStudents"/></h5>
                                <small class="text-muted">Total Estudiantes</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 text-center">
                        <div class="card border-success h-100">
                            <div class="card-body py-2">
                                <h5 class="mb-0 text-success"><t t-esc="approvedCount"/></h5>
                                <small class="text-muted">Aprobados</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 text-center">
                        <div class="card border-info h-100">
                            <div class="card-body py-2">
                                <h5 class="mb-0 text-info"><t t-esc="approvalRate"/>%</h5>
                                <small class="text-muted">Tasa de Aprobaci√≥n</small>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Top Students by Section -->
                <div class="row">
                    <t t-foreach="topStudentsBySection" t-as="section" t-key="section.section_id">
                        <div class="col-lg-4 col-md-6 mb-3">
                            <div class="card h-100 shadow-sm">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">
                                        <i class="fa fa-graduation-cap me-1"/>
                                        <t t-esc="section.section_name"/>
                                    </h6>
                                </div>
                                <div class="card-body p-2">
                                    <ul class="list-group list-group-flush">
                                        <t t-foreach="section.top_3" t-as="student" t-key="student.enrollment_id">
                                            <li class="list-group-item d-flex justify-content-between align-items-center py-2 px-1"
                                                style="cursor: pointer;"
                                                t-on-click="() => onStudentClick(student.student_id)">
                                                <div class="d-flex align-items-center">
                                                    <span t-attf-class="fs-5 me-2 #{getMedalClass(student_index)}">
                                                        <t t-esc="getMedalIcon(student_index)"/>
                                                    </span>
                                                    <span class="text-truncate" style="max-width: 120px;" t-att-title="student.student_name">
                                                        <t t-esc="student.student_name"/>
                                                    </span>
                                                </div>
                                                <div class="d-flex align-items-center gap-2">
                                                    <span class="fw-bold">
                                                        <t t-esc="student.average"/>
                                                    </span>
                                                    <span t-attf-class="#{getStateClass(student.state)}">
                                                        <t t-esc="getStateLabel(student.state)"/>
                                                    </span>
                                                </div>
                                            </li>
                                        </t>
                                        <t t-if="!section.top_3 or section.top_3.length === 0">
                                            <li class="list-group-item text-muted text-center py-3">
                                                <i class="fa fa-info-circle me-1"/>
                                                Sin estudiantes evaluados
                                            </li>
                                        </t>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </t>
            <t t-else="">
                <div class="alert alert-info text-center py-4">
                    <i class="fa fa-info-circle fa-2x mb-2"/>
                    <p class="mb-0">No hay datos de estudiantes para mostrar en este nivel.</p>
                </div>
            </t>
        </div>
    </t>
</templates>

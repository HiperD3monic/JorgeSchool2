<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="school.ProfessorDetailedStatsWidget">
        <div class="o_professor_detailed_stats_widget">
            <t t-if="hasData">
                <div class="table-responsive">
                    <table class="table table-sm mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0"><i class="fa fa-user me-1 text-muted"/>Profesor</th>
                                <t t-foreach="studentTypes" t-as="type" t-key="type.key">
                                    <th class="border-0 text-center small" style="min-width: 60px;">
                                        <i t-attf-class="fa {{ type.icon }}" t-att-style="'color:' + type.color"/>
                                    </th>
                                </t>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="professors" t-as="prof" t-key="prof.professor_id">
                                <tr t-on-click="() => this.onProfessorClick(prof.professor_id)" style="cursor: pointer;">
                                    <td class="border-0">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-xs me-2" t-att-style="'background-color: ' + getAvatarColor(prof.professor_name)">
                                                <t t-esc="getInitials(prof.professor_name)"/>
                                            </div>
                                            <span class="text-truncate small" style="max-width: 100px;"><t t-esc="prof.professor_name"/></span>
                                        </div>
                                    </td>
                                    <t t-foreach="studentTypes" t-as="type" t-key="type.key">
                                        <td class="border-0 text-center">
                                            <t t-set="stats" t-value="getProfStats(prof, type.key)"/>
                                            <t t-if="stats &amp;&amp; stats.count > 0">
                                                <span t-attf-class="badge {{ stats.average >= 15 ? 'bg-success' : stats.average >= 10 ? 'bg-warning' : 'bg-danger' }} small">
                                                    <t t-esc="stats.average"/>
                                                </span>
                                            </t>
                                            <t t-else="">
                                                <span class="text-muted small">-</span>
                                            </t>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
            <t t-else="">
                <div class="alert alert-info text-center py-3">
                    <i class="fa fa-info-circle me-2"/>No hay estad√≠sticas de profesores.
                </div>
            </t>
        </div>
    </t>
</templates>

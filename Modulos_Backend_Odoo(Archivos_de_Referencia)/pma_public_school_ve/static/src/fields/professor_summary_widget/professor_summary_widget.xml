<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="school.ProfessorSummaryWidget">
        <div class="o_professor_summary_widget">
            <t t-if="hasData">
                <!-- Search -->
                <div class="mb-3">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-light border-end-0"><i class="fa fa-search text-muted"/></span>
                        <input type="text" class="form-control border-start-0" placeholder="Buscar profesor..." t-on-input="onSearch" t-model="state.searchQuery"/>
                    </div>
                </div>
                
                <!-- Table -->
                <div class="table-responsive">
                    <table class="table table-sm table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0" t-on-click="() => this.onSort('professor_name')" style="cursor: pointer;">
                                    <i class="fa fa-user me-1 text-muted"/>Profesor
                                    <i t-if="state.sortField === 'professor_name'" t-attf-class="fa fa-sort-{{ state.sortOrder === 'asc' ? 'up' : 'down' }} ms-1"/>
                                </th>
                                <th class="border-0 text-center" t-on-click="() => this.onSort('sections_count')" style="cursor: pointer;">
                                    Secciones
                                </th>
                                <th class="border-0 text-center" t-on-click="() => this.onSort('subjects_count')" style="cursor: pointer;">
                                    Materias
                                </th>
                                <th class="border-0 text-center" t-on-click="() => this.onSort('evaluations_count')" style="cursor: pointer;">
                                    Evaluaciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="filteredProfessors" t-as="prof" t-key="prof.professor_id">
                                <tr t-on-click="() => this.onProfessorClick(prof.professor_id)" style="cursor: pointer;">
                                    <td class="border-0">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm me-2" t-att-style="'background-color: ' + getAvatarColor(prof.professor_name)">
                                                <t t-esc="getInitials(prof.professor_name)"/>
                                            </div>
                                            <span class="text-truncate" style="max-width: 150px;"><t t-esc="prof.professor_name"/></span>
                                        </div>
                                    </td>
                                    <td class="border-0 text-center"><t t-esc="prof.sections_count"/></td>
                                    <td class="border-0 text-center"><t t-esc="prof.subjects_count"/></td>
                                    <td class="border-0 text-center"><t t-esc="prof.evaluations_count"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
                
                <t t-if="filteredProfessors.length === 0">
                    <div class="text-center text-muted py-3">
                        <i class="fa fa-search me-1"/>No se encontraron profesores.
                    </div>
                </t>
            </t>
            <t t-else="">
                <div class="alert alert-info text-center py-3">
                    <i class="fa fa-info-circle me-2"/>No hay profesores asignados.
                </div>
            </t>
        </div>
    </t>
</templates>

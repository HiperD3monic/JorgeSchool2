<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="school.StudentsDistributionChart">
        <div class="o_students_distribution_chart">
            <div t-if="data and data.total > 0" class="o_chart_wrapper" style="position: relative; height: 300px;">
                <canvas t-ref="canvas"/>
            </div>
            <div t-else="" class="alert alert-info text-center">
                <i class="fa fa-info-circle me-2"/>
                No hay estudiantes inscritos
            </div>
        </div>
    </t>
</templates>

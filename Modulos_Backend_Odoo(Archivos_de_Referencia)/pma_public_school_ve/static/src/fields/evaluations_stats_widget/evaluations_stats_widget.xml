<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="school.EvaluationsStatsWidget">
        <div class="o_evaluations_stats_widget">
            <t t-if="hasData">
                <div class="row g-3">
                    <!-- Left: Distribution Chart -->
                    <div class="col-md-4 col-12">
                        <div class="position-relative" style="height: 140px;">
                            <canvas t-ref="canvas"/>
                        </div>
                        <!-- Mini Legend -->
                        <div class="d-flex justify-content-center gap-3 mt-2">
                            <span class="small"><span class="rounded me-1" style="display:inline-block;width:10px;height:10px;background:#1E88E5;"/> Media</span>
                            <span class="small"><span class="rounded me-1" style="display:inline-block;width:10px;height:10px;background:#43A047;"/> Primaria</span>
                            <span class="small"><span class="rounded me-1" style="display:inline-block;width:10px;height:10px;background:#FFB300;"/> Preescolar</span>
                        </div>
                    </div>
                    
                    <!-- Right: Stats -->
                    <div class="col-md-8 col-12">
                        <div class="row g-2">
                            <div class="col-6 col-md-3">
                                <div class="text-center p-2 bg-light rounded">
                                    <i class="fa fa-file-text text-primary"/>
                                    <span class="d-block fw-bold"><t t-esc="state.animatedTotal"/></span>
                                    <small class="text-muted" style="font-size: 0.7rem;">Total</small>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="text-center p-2 bg-light rounded">
                                    <i class="fa fa-check-circle text-success"/>
                                    <span class="d-block fw-bold text-success"><t t-esc="state.animatedQualified"/></span>
                                    <small class="text-muted" style="font-size: 0.7rem;">Calificadas</small>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="text-center p-2 bg-light rounded">
                                    <i class="fa fa-clock-o text-warning"/>
                                    <span class="d-block fw-bold text-warning"><t t-esc="state.animatedPartial"/></span>
                                    <small class="text-muted" style="font-size: 0.7rem;">Parciales</small>
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="text-center p-2 bg-light rounded">
                                    <i class="fa fa-pencil text-muted"/>
                                    <span class="d-block fw-bold text-muted"><t t-esc="state.animatedDraft"/></span>
                                    <small class="text-muted" style="font-size: 0.7rem;">Borrador</small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Completion Progress -->
                        <div class="mt-3">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <small class="text-muted">Completadas</small>
                                <small t-attf-class="fw-bold {{ getCompletionClass() }}"><t t-esc="completionRate"/>%</small>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div t-attf-class="progress-bar {{ getCompletionBgClass() }}" t-att-style="'width: ' + completionRate + '%'"/>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
            <t t-else="">
                <div class="alert alert-info text-center py-3">
                    <i class="fa fa-info-circle me-2"/>No hay evaluaciones.
                </div>
            </t>
        </div>
    </t>
</templates>

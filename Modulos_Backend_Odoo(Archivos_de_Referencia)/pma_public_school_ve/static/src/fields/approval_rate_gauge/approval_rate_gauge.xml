<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="school.ApprovalRateGauge">
        <div class="o_approval_rate_gauge" t-ref="gaugeContainer">
            <t t-if="hasData">
                <div class="row align-items-center">
                    <!-- Gauge Section -->
                    <div class="col-md-5 col-12 text-center mb-md-0">
                        <div class="position-relative d-inline-block" style="width: 150px; height: 100px;">
                            <svg viewBox="0 0 100 60" style="width: 100%; height: 100%;">
                                <!-- Background arc -->
                                <path d="M 10 55 A 40 40 0 0 1 90 55" fill="none" stroke="#e5e7eb" stroke-width="8" stroke-linecap="round"/>
                                <!-- Progress arc -->
                                <path d="M 10 55 A 40 40 0 0 1 90 55" fill="none" t-att-stroke="getGaugeColor(state.animatedRate)" stroke-width="8" stroke-linecap="round" t-att-style="getProgressStyle()"/>
                            </svg>
                            <div class="position-absolute top-100 start-50 translate-middle text-center" style="margin-top: -15px;">
                                <span t-attf-class="fs-4 fw-bold {{ getTextColorClass(state.animatedRate) }}">
                                    <t t-esc="state.animatedRate.toFixed(0)"/>%
                                </span>
                            </div>
                        </div>
                        <p class="text-muted small mt-2 mb-0">Tasa de Aprobaci√≥n</p>
                    </div>
                    
                    <!-- Stats Section -->
                    <div class="col-md-7 col-12">
                        <div class="row g-2 mb-3">
                            <div class="col-4 text-center">
                                <div class="bg-light rounded p-2">
                                    <i class="fa fa-users text-primary mb-1"/>
                                    <span class="d-block fw-bold"><t t-esc="total"/></span>
                                    <small class="text-muted" style="font-size: 0.7rem;">Total</small>
                                </div>
                            </div>
                            <div class="col-4 text-center">
                                <div class="bg-light rounded p-2">
                                    <i class="fa fa-check text-success mb-1"/>
                                    <span class="d-block fw-bold text-success"><t t-esc="state.animatedApproved"/></span>
                                    <small class="text-muted" style="font-size: 0.7rem;">Aprobados</small>
                                </div>
                            </div>
                            <div class="col-4 text-center">
                                <div class="bg-light rounded p-2">
                                    <i class="fa fa-times text-danger mb-1"/>
                                    <span class="d-block fw-bold text-danger"><t t-esc="state.animatedFailed"/></span>
                                    <small class="text-muted" style="font-size: 0.7rem;">Reprobados</small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Level Bars (Compact) -->
                        <t t-if="adjustedByLevel.length > 0">
                            <div class="d-flex flex-column gap-1">
                                <t t-foreach="adjustedByLevel" t-as="level" t-key="level.name">
                                    <div class="d-flex align-items-center">
                                        <span class="small text-muted me-2" style="width: 80px; font-size: 0.75rem;"><t t-esc="level.name"/></span>
                                        <div class="flex-grow-1">
                                            <div class="progress" style="height: 6px;">
                                                <div t-attf-class="progress-bar {{ level.rate >= 80 ? 'bg-success' : level.rate >= 60 ? 'bg-warning' : 'bg-danger' }}" t-att-style="'width: ' + level.rate + '%'"/>
                                            </div>
                                        </div>
                                        <span class="small fw-bold ms-2" style="width: 35px;"><t t-esc="level.rate"/>%</span>
                                    </div>
                                </t>
                            </div>
                        </t>
                    </div>
                </div>
            </t>
            <t t-else="">
                <div class="alert alert-info text-center">
                    <i class="fa fa-info-circle me-2"/>No hay datos.
                </div>
            </t>
        </div>
    </t>
</templates>

<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="school.PreObservationsTimeline">
        <div class="o_pre_observations_timeline w-100" style="width: 100% !important;">
            <t t-if="hasData">
                <div class="w-100">
                    <t t-foreach="timeline" t-as="item" t-key="item.id">
                        <div class="d-flex mb-3 w-100">
                            <!-- Timeline dot and line -->
                            <div class="me-3 d-flex flex-column align-items-center" style="min-width: 20px;">
                                <div class="rounded-circle bg-warning" style="width: 12px; height: 12px;"/>
                                <t t-if="!item_last">
                                    <div class="flex-grow-1 bg-light" style="width: 2px; min-height: 40px;"/>
                                </t>
                            </div>
                            
                            <!-- Content - full width -->
                            <div class="flex-grow-1 p-3 bg-light rounded border-start border-warning border-3" style="width: calc(100% - 35px);">
                                <!-- Header -->
                                <div class="d-flex justify-content-between align-items-start mb-2 flex-wrap gap-2">
                                    <div class="flex-grow-1">
                                        <span class="fw-bold text-dark">
                                            <i class="fa fa-child me-1 text-warning"/>
                                            <t t-esc="item.student_name"/>
                                        </span>
                                        <t t-if="item.section">
                                            <span class="text-muted small ms-2">
                                                (<t t-esc="item.section"/>)
                                            </span>
                                        </t>
                                    </div>
                                    <span class="badge bg-secondary">
                                        <i class="fa fa-calendar me-1"/>
                                        <t t-esc="item.date"/>
                                    </span>
                                </div>
                                
                                <!-- Observation text -->
                                <p class="mb-2 small text-dark">
                                    <t t-esc="item.observation"/>
                                </p>
                                
                                <!-- Footer -->
                                <div class="d-flex justify-content-between align-items-center flex-wrap gap-1">
                                    <small class="text-muted">
                                        <t t-if="item.professor">
                                            <i class="fa fa-user-tie me-1"/>Docente <t t-esc="item.professor"/>
                                        </t>
                                    </small>
                                    <small class="text-muted">
                                        <t t-if="item.evaluation_name">
                                            <i class="fa fa-clipboard me-1"/>
                                            <t t-esc="item.evaluation_name"/>
                                        </t>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </t>
            <t t-else="">
                <div class="alert alert-info text-center">
                    <i class="fa fa-info-circle me-2"/>No hay observaciones registradas para preescolar.
                </div>
            </t>
        </div>
    </t>
</templates>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="school_mention_inscription_wizard_view_form" model="ir.ui.view">
        <field name="name">school.mention.inscription.wizard.view.form</field>
        <field name="model">school.mention.inscription.wizard</field>
        <field name="arch" type="xml">
            <form string="Inscribir en Mención">
                <field name="student_id" invisible="1"/>
                <field name="year_id" invisible="1"/>
                <field name="can_enroll" invisible="1"/>
                <sheet>
                    <!-- Warning if section doesn't support mentions -->
                    <div class="alert alert-warning" role="alert" invisible="can_enroll">
                        <i class="fa fa-exclamation-triangle"/> 
                        <strong>Advertencia:</strong> La sección del estudiante no tiene habilitado 
                        'Extiende a Medio Técnico'. No puede inscribirse en menciones.
                    </div>
                    
                    <group string="Seleccionar Mención Inscrita">
                        <field name="mention_section_id" 
                               options="{'no_create': 1}"
                               readonly="not can_enroll"/>
                        <field name="mention_name" invisible="1"/>
                    </group>
                    <group>
                        <group>
                            <field name="parent_id" 
                                   options="{'no_create': 1}" 
                                   domain="[('parent', '=', True)]"
                                   readonly="not can_enroll"/>
                        </group>
                        <group>
                            <field name="parent_signature_date" readonly="not can_enroll"/>
                        </group>
                    </group>
                    <group string="Firma del Representante">
                        <label for="parent_signature" string="Firma"/>
                        <field name="parent_signature" 
                               widget="image" 
                               nolabel="1"
                               options="{'size': [0, 120]}"
                               readonly="not can_enroll"/>
                    </group>
                    <group string="Observaciones (Opcional)">
                        <field name="observations" 
                               nolabel="1"
                               placeholder="Observaciones adicionales sobre la inscripción en esta mención técnica..."
                               readonly="not can_enroll"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Confirmar Inscripción" 
                            type="object" 
                            name="action_confirm_inscription" 
                            class="btn-success"
                            invisible="not can_enroll"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>

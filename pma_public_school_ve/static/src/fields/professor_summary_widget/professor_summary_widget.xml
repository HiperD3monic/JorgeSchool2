<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="school.ProfessorSummaryWidget">
        <div class="o_professor_summary_widget">
            <t t-if="professors.length > 0">
                <div class="mb-3 text-center">
                    <h3 class="mb-0"><t t-esc="totalProfessors"/></h3>
                    <p class="text-muted">Profesores Activos</p>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Profesor</th>
                                <th class="text-center">Secciones</th>
                                <th class="text-center">Materias</th>
                                <th class="text-center">Evaluaciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="professors" t-as="prof" t-key="prof.professor_id">
                                <tr class="cursor-pointer" t-on-click="() => this.onProfessorClick(prof.professor_id)">
                                    <td>
                                        <i class="fa fa-user-tie me-2 text-primary"/>
                                        <strong t-esc="prof.professor_name"/>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-info" t-esc="prof.sections_count"/>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-success" t-esc="prof.subjects_count"/>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-warning" t-esc="prof.evaluations_count"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
            <div t-else="" class="alert alert-info text-center">
                <i class="fa fa-info-circle me-2"/>
                No hay profesores registrados
            </div>
        </div>
    </t>
</templates>

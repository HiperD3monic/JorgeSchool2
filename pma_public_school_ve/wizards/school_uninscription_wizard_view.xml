<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="school_uninscription_wizard_view_form" model="ir.ui.view">
        <field name="name">school.uninscription.wizard.view.form</field>
        <field name="model">school.uninscription.wizard</field>
        <field name="arch" type="xml">
            <form string="Desinscribir Estudiante">
                <group>
                    <field name="student_id" invisible="1"/>
                    <group colspan="2">
                        <field name="uninscription_reason" 
                               placeholder="Describa detalladamente el motivo de la desinscripción del estudiante..."
                               nolabel="1"
                               colspan="2"/>
                    </group>
                </group>
                <group string="Documentos de Soporte (Opcional)">
                    <group>
                        <label for="document_1" string="Documento 1"/>
                        <div class="o_row">
                            <field name="document_1" filename="document_1_filename" nolabel="1"/>
                            <field name="document_1_filename" invisible="1"/>
                        </div>
                    </group>
                    <group>
                        <label for="document_2" string="Documento 2"/>
                        <div class="o_row">
                            <field name="document_2" filename="document_2_filename" nolabel="1"/>
                            <field name="document_2_filename" invisible="1"/>
                        </div>
                    </group>
                </group>
                <group>
                    <group>
                        <label for="document_3" string="Documento 3"/>
                        <div class="o_row">
                            <field name="document_3" filename="document_3_filename" nolabel="1"/>
                            <field name="document_3_filename" invisible="1"/>
                        </div>
                    </group>
                    <group/>
                </group>
                <footer>
                    <button string="Confirmar Desinscripción" 
                            type="object" 
                            name="action_confirm_uninscription" 
                            class="btn-danger"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>

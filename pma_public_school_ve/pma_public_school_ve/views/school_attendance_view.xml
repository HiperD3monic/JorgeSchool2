    <!-- Acción para Asistencia de Estudiantes -->
    <record id="action_school_attendance_student" model="ir.actions.act_window">
        <field name="name">Asistencia de Estudiantes</field>
        <field name="res_model">school.attendance</field>
        <field name="view_mode">list,kanban,form,calendar,pivot,graph</field>
        <field name="domain">[('is_student', '=', True)]</field>
        <field name="context">{'default_is_student': True, 'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Registrar asistencia de estudiantes
            </p>
            <p>
                Haga clic para crear un nuevo registro de asistencia.
            </p>
        </field>
    </record>


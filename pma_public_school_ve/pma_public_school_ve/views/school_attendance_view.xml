<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista Formulario de Asistencia -->
    <record id="view_school_attendance_form" model="ir.ui.view">
        <field name="name">school.attendance.form</field>
        <field name="model">school.attendance</field>
        <field name="arch" type="xml">
            <form string="Asistencia">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="attendance_type" widget="radio" options="{'horizontal': true}"/>
                        </h1>
                    </div>
                    
                    <group>
                        <field name="date"/>
                    </group>
                    
                    <!-- CAMPOS PARA ESTUDIANTES -->
                    <group invisible="attendance_type != 'student'" string="Información del Estudiante">
                        <group>
                            <field name="student_id" required="attendance_type == 'student'" 
                                   options="{'no_create': True}"/>
                            <field name="section_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="schedule_id" required="attendance_type == 'student'"
                                   domain="[('section_id', '=', section_id), ('active', '=', True)]"
                                   options="{'no_create': True}"/>
                            <field name="subject_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <!-- CAMPOS PARA PERSONAL -->
                    <group invisible="attendance_type != 'employee'" string="Información del Empleado">
                        <group>
                            <field name="employee_id" required="attendance_type == 'employee'"
                                   options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="check_in_time" widget="float_time"/>
                            <field name="check_out_time" widget="float_time"/>
                        </group>
                    </group>
                    
                    <!-- CAMPOS PARA VISITANTES -->
                    <group invisible="attendance_type != 'visitor'" string="Información del Visitante">
                        <group>
                            <field name="visitor_name" required="attendance_type == 'visitor'"
                                   placeholder="Nombre completo del visitante"/>
                            <field name="visitor_id_number" required="attendance_type == 'visitor'"
                                   placeholder="Ej: V-12345678"/>
                        </group>
                        <group>
                            <field name="visitor_destination" placeholder="A dónde se dirige..."/>
                            <field name="check_in_time" widget="float_time"/>
                            <field name="check_out_time" widget="float_time"/>
                        </group>
                    </group>
                    
                    <!-- OBSERVACIONES (COMÚN) -->
                    <group>
                        <field name="observations" placeholder="Observaciones o justificaciones..."/>
                    </group>
                    
                    <!-- CAMPOS OCULTOS PARA LÓGICA -->
                    <group invisible="1">
                        <field name="is_student"/>
                        <field name="is_employee"/>
                        <field name="year_id"/>
                        <field name="week_number"/>
                        <field name="month"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Lista de Asistencia -->
    <record id="view_school_attendance_list" model="ir.ui.view">
        <field name="name">school.attendance.list</field>
        <field name="model">school.attendance</field>
        <field name="arch" type="xml">
            <list string="Asistencias" decoration-success="state == 'present'" 
                  decoration-danger="state == 'absent'" decoration-warning="state == 'late'"
                  decoration-info="state in ('justified', 'permission')">
                <field name="date"/>
                <field name="student_id"/>
                <field name="employee_id"/>
                <field name="section_id"/>
                <field name="subject_id"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'present'"
                       decoration-danger="state == 'absent'"
                       decoration-warning="state == 'late'"
                       decoration-info="state in ('justified', 'permission')"/>
                <field name="check_in_time" widget="float_time"/>
                <field name="check_out_time" widget="float_time"/>
            </list>
        </field>
    </record>

    <!-- Vista Kanban de Asistencia -->
    <record id="view_school_attendance_kanban" model="ir.ui.view">
        <field name="name">school.attendance.kanban</field>
        <field name="model">school.attendance</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="date"/>
                <field name="student_id"/>
                <field name="employee_id"/>
                <field name="state"/>
                <field name="section_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="display_name"/>
                                    </strong>
                                </div>
                                <span class="badge" t-attf-class="badge-#{state == 'present' ? 'success' : state == 'absent' ? 'danger' : state == 'late' ? 'warning' : 'info'}">
                                    <field name="state"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="date"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="section_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista Calendario de Asistencia -->
    <record id="view_school_attendance_calendar" model="ir.ui.view">
        <field name="name">school.attendance.calendar</field>
        <field name="model">school.attendance</field>
        <field name="arch" type="xml">
            <calendar string="Calendario de Asistencias" date_start="date" color="state" mode="month">
                <field name="display_name"/>
                <field name="state"/>
                <field name="section_id"/>
            </calendar>
        </field>
    </record>


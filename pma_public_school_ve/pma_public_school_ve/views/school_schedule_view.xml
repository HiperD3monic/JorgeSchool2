<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista Formulario de Horario -->
    <record id="view_school_schedule_form" model="ir.ui.view">
        <field name="name">school.schedule.form</field>
        <field name="model">school.schedule</field>
        <field name="arch" type="xml">
            <form string="Horario de Clase">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_attendances" type="object" 
                                class="oe_stat_button" icon="fa-check-square">
                            <field name="attendance_count" widget="statinfo" string="Asistencias"/>
                        </button>
                    </div>
                    
                    <group>
                        <group>
                            <field name="section_id"/>
                            <field name="education_level" invisible="1"/>
                            <field name="available_professor_ids" invisible="1"/>
                        </group>
                        <group>
                            <field name="day_of_week"/>
                            <field name="time_slot_id" placeholder="Seleccionar bloque predefinido (opcional)"/>
                        </group>
                    </group>
                    
                    <!-- CAMPOS PARA MEDIA GENERAL (Por Materia) -->
                    <group invisible="education_level != 'secundary'" string="Configuración por Materia (Media General)">
                        <group>
                            <field name="subject_id" required="education_level == 'secundary'"/>
                            <field name="professor_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <!-- CAMPOS PARA PRIMARIA/PREESCOLAR (Por Profesores) -->
                    <group invisible="education_level not in ['primary', 'pre']" string="Configuración por Profesores (Primaria/Preescolar)">
                        <group colspan="2">
                            <field name="professor_ids" widget="many2many_tags" 
                                   required="education_level in ['primary', 'pre']"
                                   options="{'no_create': True}"/>
                        </group>
                    </group>
                    
                    <!-- CAMPOS COMUNES -->
                    <group>
                        <group>
                            <field name="start_time" widget="float_time"/>
                            <field name="end_time" widget="float_time"/>
                            <field name="duration" widget="float_time" readonly="1"/>
                        </group>
                        <group>
                            <field name="classroom" placeholder="Ej: Aula 101"/>
                            <field name="year_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="notes" placeholder="Notas adicionales..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Lista de Horario -->
    <record id="view_school_schedule_list" model="ir.ui.view">
        <field name="name">school.schedule.list</field>
        <field name="model">school.schedule</field>
        <field name="arch" type="xml">
            <list string="Horarios" decoration-muted="not active">
                <field name="section_id"/>
                <field name="subject_id"/>
                <field name="professor_id"/>
                <field name="day_of_week"/>
                <field name="start_time" widget="float_time"/>
                <field name="end_time" widget="float_time"/>
                <field name="duration" widget="float_time"/>
                <field name="classroom"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Vista Kanban de Horario -->
    <record id="view_school_schedule_kanban" model="ir.ui.view">
        <field name="name">school.schedule.kanban</field>
        <field name="model">school.schedule</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="section_id">
                <field name="display_name"/>
                <field name="section_id"/>
                <field name="subject_id"/>
                <field name="professor_id"/>
                <field name="day_of_week"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="classroom"/>
                <field name="color"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_color_#{kanban_getcolor(record.color.raw_value)}">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="subject_id"/>
                                    </strong>
                                    <br/>
                                    <span class="text-muted">
                                        <field name="day_of_week"/>
                                    </span>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <i class="fa fa-clock-o"/> 
                                    <field name="start_time" widget="float_time"/> - 
                                    <field name="end_time" widget="float_time"/>
                                </div>
                                <div t-if="record.professor_id.value">
                                    <i class="fa fa-user"/> 
                                    <field name="professor_id"/>
                                </div>
                                <div t-if="record.classroom.value">
                                    <i class="fa fa-building"/> 
                                    <field name="classroom"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Acción para Horarios -->
    <record id="action_school_schedule" model="ir.actions.act_window">
        <field name="name">Horarios de Clase</field>
        <field name="res_model">school.schedule</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear horario de clase
            </p>
            <p>
                Configure los horarios de clase para cada sección, asignando materias, profesores y bloques de tiempo.
            </p>
        </field>
    </record>

    <!-- Client Action para Widget de Visualización de Horarios (OWL Component) -->
    <record id="action_schedule_widget" model="ir.actions.client">
        <field name="name">Visualización de Horarios</field>
        <field name="tag">schedule_widget</field>
    </record>

</odoo>

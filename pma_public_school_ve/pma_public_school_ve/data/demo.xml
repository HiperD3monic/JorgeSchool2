<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- Tipos de evaluación -->
	<record id="eval_type_pre_observation_demo" model="school.evaluation.type">
		<field name="type">pre</field>
		<field name="type_evaluation">observation</field>
	</record>

	<record id="eval_type_primary_20_demo" model="school.evaluation.type">
		<field name="type">primary</field>
		<field name="type_evaluation">20</field>
	</record>

	<record id="eval_type_secundary_100_demo" model="school.evaluation.type">
		<field name="type">secundary</field>
		<field name="type_evaluation">100</field>
	</record>

	<!-- Año escolar -->
	<record id="school_year_2025_demo" model="school.year">
		<field name="name">2025-2026</field>
		<field name="evalution_type_pree" ref="eval_type_pre_observation_demo"/>
		<field name="evalution_type_primary" ref="eval_type_primary_20_demo"/>
		<field name="evalution_type_secundary" ref="eval_type_secundary_100_demo"/>
	</record>

	<!-- Registros de secciones (template) -->
    <record id="reg_section_primary_a_demo" model="school.register.section">
        <field name="name">Sección Primaria A</field>
        <field name="type">primary</field>
    </record>

    <record id="reg_section_primary_b_demo" model="school.register.section">
        <field name="name">Sección Primaria B</field>
        <field name="type">primary</field>
    </record>

    <record id="reg_section_primary_c_demo" model="school.register.section">
        <field name="name">Sección Primaria C</field>
        <field name="type">primary</field>
    </record>

    <record id="reg_section_secundary_a_demo" model="school.register.section">
        <field name="name">Sección Secundaria A</field>
        <field name="type">secundary</field>
    </record>

    <record id="reg_section_secundary_b_demo" model="school.register.section">
        <field name="name">Sección Secundaria B</field>
        <field name="type">secundary</field>
    </record>

    <record id="reg_section_secundary_c_demo" model="school.register.section">
        <field name="name">Sección Secundaria C</field>
        <field name="type">secundary</field>
    </record>

    <!-- Materias registradas (plantilla) -->
    <record id="reg_subject_math_demo" model="school.register.subject">
        <field name="name">Matemáticas</field>
        <field name="section_ids" eval="[(4, ref('reg_section_primary_a_demo')), (4, ref('reg_section_primary_b_demo')), (4, ref('reg_section_secundary_a_demo'))]"/>
    </record>

    <record id="reg_subject_language_demo" model="school.register.subject">
        <field name="name">Lengua</field>
        <field name="section_ids" eval="[(4, ref('reg_section_primary_a_demo')), (4, ref('reg_section_primary_c_demo'))]"/>
    </record>

    <record id="reg_subject_physics_demo" model="school.register.subject">
        <field name="name">Ciencias</field>
        <field name="section_ids" eval="[(4, ref('reg_section_secundary_b_demo')), (4, ref('reg_section_secundary_c_demo'))]"/>
    </record>

    <record id="reg_subject_history_demo" model="school.register.subject">
        <field name="name">Historia</field>
        <field name="section_ids" eval="[(4, ref('reg_section_secundary_a_demo')), (4, ref('reg_section_secundary_b_demo'))]"/>
    </record>

    <record id="reg_subject_geography_demo" model="school.register.subject">
        <field name="name">Geografía</field>
        <field name="section_ids" eval="[(4, ref('reg_section_secundary_a_demo'))]"/>
    </record>

    <record id="reg_subject_english_demo" model="school.register.subject">
        <field name="name">Inglés</field>
        <field name="section_ids" eval="[(4, ref('reg_section_primary_b_demo')), (4, ref('reg_section_secundary_c_demo'))]"/>
    </record>

    <record id="reg_subject_art_demo" model="school.register.subject">
        <field name="name">Arte</field>
        <field name="section_ids" eval="[(4, ref('reg_section_primary_a_demo')), (4, ref('reg_section_primary_c_demo'))]"/>
    </record>

    <record id="reg_subject_pe_demo" model="school.register.subject">
        <field name="name">Educación Física</field>
        <field name="section_ids" eval="[(4, ref('reg_section_primary_a_demo')), (4, ref('reg_section_primary_b_demo')), (4, ref('reg_section_secundary_c_demo'))]"/>
    </record>
    <!-- Empleados (docentes) adicionales -->
    <record id="hr_employee_andres_demo" model="hr.employee">
        <field name="name">Andrés Profesor</field>
        <field name="school_employee_type">docente</field>
    </record>

    <record id="hr_employee_luisa_demo" model="hr.employee">
        <field name="name">Luisa Docente</field>
        <field name="school_employee_type">docente</field>
    </record>

    <record id="hr_employee_ana_demo" model="hr.employee">
        <field name="name">Ana Docente</field>
        <field name="school_employee_type">docente</field>
    </record>

    <record id="hr_employee_carlos_prof_demo" model="hr.employee">
        <field name="name">Carlos Profesor</field>
        <field name="school_employee_type">docente</field>
    </record>

    <record id="hr_employee_pedro_demo" model="hr.employee">
        <field name="name">Pedro Profesor</field>
        <field name="school_employee_type">docente</field>
    </record>

    <!-- Profesores del módulo adicionales (vinculados a hr.employee y al año) -->
    <record id="school_professor_andres_demo" model="school.professor">
        <field name="professor_id" ref="hr_employee_andres_demo"/>
        <field name="year_id" ref="school_year_2025_demo"/>
        <!-- Andrés imparte Ciencias y Historia -->
        <field name="subject_ids" eval="[(4, ref('reg_subject_physics_demo')), (4, ref('reg_subject_history_demo'))]"/>
    </record>

    <record id="school_professor_luisa_demo" model="school.professor">
        <field name="professor_id" ref="hr_employee_luisa_demo"/>
        <field name="year_id" ref="school_year_2025_demo"/>
        <!-- Luisa imparte Geografía e Inglés -->
        <field name="subject_ids" eval="[(4, ref('reg_subject_geography_demo')), (4, ref('reg_subject_english_demo'))]"/>
    </record>

    <record id="school_professor_ana_demo" model="school.professor">
        <field name="professor_id" ref="hr_employee_ana_demo"/>
        <field name="year_id" ref="school_year_2025_demo"/>
        <!-- Ana imparte Arte y Educación Física -->
        <field name="subject_ids" eval="[(4, ref('reg_subject_art_demo')), (4, ref('reg_subject_pe_demo'))]"/>
    </record>

    <record id="hr_employee_john_demo" model="hr.employee">
        <field name="name">John Profesor</field>
        <field name="school_employee_type">docente</field>
    </record>

    <record id="school_professor_john_demo" model="school.professor">
        <field name="professor_id" ref="hr_employee_john_demo"/>
        <field name="year_id" ref="school_year_2025_demo"/>
        <field name="subject_ids" eval="[(4, ref('reg_subject_math_demo'))]"/>
    </record>

    <record id="school_professor_carlos_demo" model="school.professor">
        <field name="professor_id" ref="hr_employee_carlos_prof_demo"/>
        <field name="year_id" ref="school_year_2025_demo"/>
        <!-- Carlos también puede colaborar en Matemáticas y Lengua -->
        <field name="subject_ids" eval="[(4, ref('reg_subject_math_demo')), (4, ref('reg_subject_language_demo'))]"/>
    </record>

    <record id="hr_employee_maria_demo" model="hr.employee">
        <field name="name">María Docente</field>
        <field name="school_employee_type">docente</field>
    </record>

    <record id="school_professor_maria_demo" model="school.professor">
        <field name="professor_id" ref="hr_employee_maria_demo"/>
        <field name="year_id" ref="school_year_2025_demo"/>
        <field name="subject_ids" eval="[(4, ref('reg_subject_language_demo'))]"/>
    </record>
    <record id="school_professor_pedro_demo" model="school.professor">
        <field name="professor_id" ref="hr_employee_pedro_demo"/>
        <field name="year_id" ref="school_year_2025_demo"/>
        <!-- Pedro especializado en Ciencias -->
        <field name="subject_ids" eval="[(4, ref('reg_subject_physics_demo'))]"/>
    </record>

	<!-- Secciones concretas para el año -->
	<record id="school_section_primary_a_demo" model="school.section">
		<field name="year_id" ref="school_year_2025_demo"/>
		<field name="section_id" ref="reg_section_primary_a_demo"/>
		<field name="professor_ids" eval="[(4, ref('school_professor_john_demo')), (4, ref('school_professor_maria_demo'))]"/>
	</record>

	<record id="school_section_secundary_b_demo" model="school.section">
		<field name="year_id" ref="school_year_2025_demo"/>
		<field name="section_id" ref="reg_section_secundary_b_demo"/>
	</record>

	<!-- Materias concretas en la sección -->
	<record id="school_subject_math_demo" model="school.subject">
		<field name="section_id" ref="school_section_primary_a_demo"/>
		<field name="subject_id" ref="reg_subject_math_demo"/>
		<field name="professor_id" ref="school_professor_john_demo"/>
	</record>

	<record id="school_subject_language_demo" model="school.subject">
		<field name="section_id" ref="school_section_primary_a_demo"/>
		<field name="subject_id" ref="reg_subject_language_demo"/>
		<field name="professor_id" ref="school_professor_maria_demo"/>
	</record>

	<!-- Partners: tutor (con child) y alumno como child -->
    <record id="partner_guardian_demo" model="res.partner">
        <field name="name">Tutor Demo</field>
        <field name="is_enrollment">True</field>
    </record>

    <record id="partner_child_alice_demo" model="res.partner">
        <field name="name">Alice Alumna</field>
        <field name="parent_id" ref="partner_guardian_demo"/>
    </record>

    <record id="partner_child_benito_demo" model="res.partner">
        <field name="name">Benito Alumno</field>
        <field name="parent_id" ref="partner_guardian_demo"/>
    </record>

    <record id="partner_child_carlos_demo" model="res.partner">
        <field name="name">Carlos Alumno</field>
        <field name="parent_id" ref="partner_guardian_demo"/>
    </record>

    <record id="partner_child_daniela_demo" model="res.partner">
        <field name="name">Daniela Alumna</field>
        <field name="parent_id" ref="partner_guardian_demo"/>
    </record>

    <record id="partner_child_elena_demo" model="res.partner">
        <field name="name">Elena Alumna</field>
        <field name="parent_id" ref="partner_guardian_demo"/>
    </record>

    <record id="partner_child_fernando_demo" model="res.partner">
        <field name="name">Fernando Alumno</field>
        <field name="parent_id" ref="partner_guardian_demo"/>
    </record>

    <!-- Estudiantes adicionales del módulo (asociados al mismo guardian) -->
    <record id="school_student_benito_demo" model="school.student">
        <field name="year_id" ref="school_year_2025_demo"/>
        <field name="section_id" ref="school_section_primary_a_demo"/>
        <field name="student_id" ref="partner_guardian_demo"/>
    </record>

    <record id="school_student_carlos_demo" model="school.student">
        <field name="year_id" ref="school_year_2025_demo"/>
        <field name="section_id" ref="school_section_primary_a_demo"/>
        <field name="student_id" ref="partner_guardian_demo"/>
    </record>

    <record id="school_student_daniela_demo" model="school.student">
        <field name="year_id" ref="school_year_2025_demo"/>
        <field name="section_id" ref="school_section_primary_a_demo"/>
        <field name="student_id" ref="partner_guardian_demo"/>
    </record>

    <record id="school_student_elena_demo" model="school.student">
        <field name="year_id" ref="school_year_2025_demo"/>
        <field name="section_id" ref="school_section_primary_a_demo"/>
        <field name="student_id" ref="partner_guardian_demo"/>
    </record>

    <record id="school_student_fernando_demo" model="school.student">
        <field name="year_id" ref="school_year_2025_demo"/>
        <field name="section_id" ref="school_section_primary_a_demo"/>
        <field name="student_id" ref="partner_guardian_demo"/>
    </record>

	<!-- Asociar el child al guardian (child_ids se crea por parent_id) -->

	<!-- Estudiante del módulo -->
    <!-- Estudiantes del módulo (asociados a los partner child creados) -->
    <record id="school_student_alice_demo" model="school.student">
        <field name="year_id" ref="school_year_2025_demo"/>
        <field name="section_id" ref="school_section_primary_a_demo"/>
        <field name="student_id" ref="partner_child_alice_demo"/>
    </record>

    <record id="school_student_benito_demo" model="school.student">
        <field name="year_id" ref="school_year_2025_demo"/>
        <field name="section_id" ref="school_section_primary_a_demo"/>
        <field name="student_id" ref="partner_child_benito_demo"/>
    </record>

    <record id="school_student_carlos_demo" model="school.student">
        <field name="year_id" ref="school_year_2025_demo"/>
        <field name="section_id" ref="school_section_primary_a_demo"/>
        <field name="student_id" ref="partner_child_carlos_demo"/>
    </record>

    <record id="school_student_daniela_demo" model="school.student">
        <field name="year_id" ref="school_year_2025_demo"/>
        <field name="section_id" ref="school_section_primary_a_demo"/>
        <field name="student_id" ref="partner_child_daniela_demo"/>
    </record>

    <record id="school_student_elena_demo" model="school.student">
        <field name="year_id" ref="school_year_2025_demo"/>
        <field name="section_id" ref="school_section_primary_a_demo"/>
        <field name="student_id" ref="partner_child_elena_demo"/>
    </record>

    <record id="school_student_fernando_demo" model="school.student">
        <field name="year_id" ref="school_year_2025_demo"/>
        <field name="section_id" ref="school_section_primary_a_demo"/>
        <field name="student_id" ref="partner_child_fernando_demo"/>
    </record>

	<!-- Evaluación -->
    <record id="school_evaluation_parcial1_demo" model="school.evaluation">
        <field name="year_id" ref="school_year_2025_demo"/>
        <field name="name">Parcial 1 - Demo</field>
        <field name="description">Evaluación demostrativa para pruebas</field>
        <field name="professor_id" ref="school_professor_john_demo"/>
        <field name="section_id" ref="school_section_primary_a_demo"/>
        <field name="subject_id" ref="school_subject_math_demo"/>
    </record>

    <record id="school_evaluation_parcial2_math_demo" model="school.evaluation">
        <field name="year_id" ref="school_year_2025_demo"/>
        <field name="name">Parcial 2 - Matemáticas (Demo)</field>
        <field name="description">Segundo parcial de matemáticas</field>
        <field name="professor_id" ref="school_professor_john_demo"/>
        <field name="section_id" ref="school_section_primary_a_demo"/>
        <field name="subject_id" ref="school_subject_math_demo"/>
    </record>

    <record id="school_evaluation_parcial2_language_demo" model="school.evaluation">
        <field name="year_id" ref="school_year_2025_demo"/>
        <field name="name">Parcial 2 - Lengua (Demo)</field>
        <field name="description">Segundo parcial de lengua</field>
        <field name="professor_id" ref="school_professor_maria_demo"/>
        <field name="section_id" ref="school_section_primary_a_demo"/>
        <field name="subject_id" ref="school_subject_language_demo"/>
    </record>

    <record id="school_evaluation_final_math_demo" model="school.evaluation">
        <field name="year_id" ref="school_year_2025_demo"/>
        <field name="name">Examen Final - Matemáticas (Demo)</field>
        <field name="description">Examen final del ciclo</field>
        <field name="professor_id" ref="school_professor_carlos_demo"/>
        <field name="section_id" ref="school_section_primary_a_demo"/>
        <field name="subject_id" ref="school_subject_math_demo"/>
    </record>

    <record id="school_evaluation_recovery_language_demo" model="school.evaluation">
        <field name="year_id" ref="school_year_2025_demo"/>
        <field name="name">Recuperación - Lengua (Demo)</field>
        <field name="description">Evaluación de recuperación para lengua</field>
        <field name="professor_id" ref="school_professor_carlos_demo"/>
        <field name="section_id" ref="school_section_primary_a_demo"/>
        <field name="subject_id" ref="school_subject_language_demo"/>
    </record>

	<!-- Puntaje para la evaluación y el estudiante -->
	<record id="school_evaluation_score_alice_demo" model="school.evaluation.score">
		<field name="evaluation_id" ref="school_evaluation_parcial1_demo"/>
		<field name="student_id" ref="school_student_alice_demo"/>
		<field name="literal_type">B</field>
		<field name="score">16.0</field>
		<field name="observation">Buen desempeño, necesita reforzar algunos ejercicios.</field>
	</record>

</odoo>

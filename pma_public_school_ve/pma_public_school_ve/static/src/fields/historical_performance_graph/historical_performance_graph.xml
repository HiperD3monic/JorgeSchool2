<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="school.HistoricalPerformanceGraphField">
        <div class="o_historical_performance_graph" t-att-class="props.className">
            <div class="text-center mb-3" t-if="data.historical_average">
                <small class="text-muted d-block mb-2">Promedio Histórico</small>
                <h4 class="mb-0 fw-bold" t-esc="data.historical_average + '/20'"/>
                <small class="text-muted">
                    <span t-esc="data.total_years"/> año(s) académico(s)
                </small>
            </div>
            <div class="o_graph_canvas_wrapper" style="position: relative; height: 400px;">
                <canvas t-if="data.years and data.years.length > 0" t-ref="canvas"/>
                <div t-else="" class="alert alert-info text-center">
                    <i class="fa fa-info-circle me-2"/>
                    No hay datos históricos para mostrar
                </div>
            </div>
        </div>
    </t>

</templates>


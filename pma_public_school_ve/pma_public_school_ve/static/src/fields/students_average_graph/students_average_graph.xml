<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="school.StudentsAverageGraphField">
        <div class="o_students_average_graph" t-att-class="props.className">
            <div class="text-center mb-3" t-if="data.general_average">
                <small class="text-muted d-block mb-2">Promedio General de la Secci√≥n</small>
                <h4 class="mb-0 fw-bold" t-esc="data.general_average + (data.evaluation_type === '20' ? '/20' : '/100')"/>
                <small class="text-muted">
                    <span t-esc="data.approved_students"/> aprobados / 
                    <span t-esc="data.failed_students"/> reprobados de 
                    <span t-esc="data.total_students"/> estudiantes
                </small>
            </div>
            <div class="o_graph_canvas_wrapper" style="position: relative; height: 400px;">
                <canvas t-if="data.students and data.students.length > 0" t-ref="canvas"/>
                <div t-else="" class="alert alert-info text-center">
                    <i class="fa fa-info-circle me-2"/>
                    No hay datos de estudiantes para mostrar
                </div>
            </div>
        </div>
    </t>

</templates>


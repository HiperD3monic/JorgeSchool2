<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="school.TopStudentsList">
        <div class="o_top_students_list">
            <t t-if="topStudents.length > 0">
                <div class="list-group">
                    <t t-foreach="topStudents" t-as="student" t-key="student.student_id">
                        <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center cursor-pointer"
                             t-on-click="() => this.onStudentClick(student.student_id)">
                            <div class="d-flex align-items-center flex-grow-1">
                                <div class="me-3" style="min-width: 40px; text-align: center;">
                                    <h4 class="mb-0" t-att-class="getMedalClass(student_index)">
                                        <t t-esc="getMedalIcon(student_index)"/>
                                    </h4>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">
                                        <t t-esc="student.student_name"/>
                                    </h6>
                                    <small class="text-muted">
                                        <i class="fa fa-graduation-cap me-1"/>
                                        <t t-esc="student.section"/>
                                    </small>
                                </div>
                            </div>
                            <div class="text-end">
                                <t t-if="student.use_literal">
                                    <h4 class="mb-0" t-att-class="student.state === 'approve' ? 'text-success' : 'text-danger'">
                                        <t t-esc="student.literal_average"/>
                                    </h4>
                                    <small class="text-muted">Literal</small>
                                </t>
                                <t t-else="">
                                    <h4 class="mb-0" t-att-class="student.average >= 10 ? 'text-success' : 'text-danger'">
                                        <t t-esc="student.average"/>
                                    </h4>
                                    <small class="text-muted">Promedio</small>
                                </t>
                            </div>
                            <div class="ms-3">
                                <span t-att-class="getStateClass(student.state)" t-esc="getStateLabel(student.state)"/>
                            </div>
                        </div>
                    </t>
                </div>
            </t>
            <div t-else="" class="alert alert-info text-center">
                <i class="fa fa-info-circle me-2"/>
                No hay estudiantes para mostrar
            </div>
        </div>
    </t>
</templates>

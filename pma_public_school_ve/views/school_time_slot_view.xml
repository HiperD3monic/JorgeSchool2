<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista Formulario de Bloque de Tiempo -->
    <record id="view_school_time_slot_form" model="ir.ui.view">
        <field name="name">school.time.slot.form</field>
        <field name="model">school.time.slot</field>
        <field name="arch" type="xml">
            <form string="Bloque de Tiempo">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_create_schedule" type="object" 
                                class="oe_stat_button" icon="fa-calendar-plus-o"
                                string="Crear Horario"/>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="education_level"/>
                            <field name="is_break"/>
                        </group>
                        <group>
                            <field name="start_time" widget="float_time"/>
                            <field name="end_time" widget="float_time"/>
                            <field name="duration" widget="float_time" readonly="1"/>
                            <field name="duration_minutes" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="time_range" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Lista de Bloque de Tiempo -->
    <record id="view_school_time_slot_list" model="ir.ui.view">
        <field name="name">school.time.slot.list</field>
        <field name="model">school.time.slot</field>
        <field name="arch" type="xml">
            <list string="Bloques de Tiempo" decoration-info="is_break == True" decoration-muted="not active">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="education_level"/>
                <field name="time_range"/>
                <field name="start_time" widget="float_time"/>
                <field name="end_time" widget="float_time"/>
                <field name="duration_minutes"/>
                <field name="is_break" widget="boolean_toggle"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Vista Kanban de Bloque de Tiempo -->
    <record id="view_school_time_slot_kanban" model="ir.ui.view">
        <field name="name">school.time.slot.kanban</field>
        <field name="model">school.time.slot</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="education_level">
                <field name="name"/>
                <field name="education_level"/>
                <field name="time_range"/>
                <field name="is_break"/>
                <field name="duration_minutes"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click #{record.is_break.raw_value ? 'oe_kanban_color_3' : ''}">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <span t-if="record.is_break.raw_value" class="badge badge-info float-end">Recreo</span>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <i class="fa fa-clock-o"/> 
                                    <field name="time_range"/>
                                </div>
                                <div class="text-muted">
                                    <i class="fa fa-hourglass-half"/> 
                                    <field name="duration_minutes"/> minutos
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- Acción para Bloques de Tiempo -->
    <record id="action_school_time_slot" model="ir.actions.act_window">
        <field name="name">Bloques de Tiempo</field>
        <field name="res_model">school.time.slot</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_active': 1, 'search_default_class_blocks': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear bloque de tiempo
            </p>
            <p>
                Defina bloques de tiempo predefinidos para facilitar la creación de horarios.
                Los bloques se organizan por nivel educativo.
            </p>
        </field>

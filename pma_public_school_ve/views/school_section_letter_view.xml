<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="school_section_letter_view_form" model="ir.ui.view">
        <field name="name">school.section.letter.view.form</field>
        <field name="model">school.section.letter</field>
        <field name="arch" type="xml">
            <form string="Letra de Sección">
                <sheet>
                    <div class="mb8">
                        <div class="d-flex gap-3">
                            <div class="d-flex flex-column flex-grow-1">
                                <h1 class="mb-0">
                                    <field name="name" placeholder="e.g. A" default_focus="1"/>
                                </h1>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="school_section_letter_view_tree" model="ir.ui.view">
        <field name="name">school.section.letter.view.tree</field>
        <field name="model">school.section.letter</field>
        <field name="arch" type="xml">
            <list string="Letras de Sección">
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- school.section.letter action window -->
    <record id="school_section_letter_action" model="ir.actions.act_window">
        <field name="name">Letras de Sección</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.section.letter</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu item -->


</odoo>

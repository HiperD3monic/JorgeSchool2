    <record id="school_mention_action" model="ir.actions.act_window">
        <field name="name">Menciones</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.mention</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva mención
            </p>
            <p>
                Las menciones son especializaciones técnicas para estudiantes de Media General.
            </p>
        </field>
    </record>

